@using LNU_Test_Portal.ViewModels
@model CourseStudentViewModel;
@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";

}

<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="CreateCourseForm card"  style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h2 class="text-uppercase text-center text-white mb-4">Create course</h2>

                        <form method="post" asp-controller="Course" asp-action="EditStudents">
                            @Html.AntiForgeryToken()
                            <input asp-for="id" hidden />

                             <div class="form-group">
                                <label class="form-label text-white" for="exampleFormControlTextarea1">Students</label>
                                @for(int i=0;i<Model.AvailableStudents.Count();i++)
                                {
                                    <div>
                                    @Html.HiddenFor(x=>Model.AvailableStudents[i].Id)
                                    @Html.CheckBoxFor(x=>Model.AvailableStudents[i].IsCheked)
                                    @Html.DisplayFor(x=>Model.AvailableStudents[i].Title)
                                    </div>
                                }
                            </div>

                            <div class="d-flex justify-content-end">
                                <a class="CancelButton text-white" asp-area="" asp-controller="Course" asp-action="GetAllCourses">Cancel</a>
                                <input type="submit" class="SaveCourseButton btn text-white" name="save" value="Save" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
